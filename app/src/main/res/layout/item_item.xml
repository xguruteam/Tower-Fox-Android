<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.MainActivity"
    android:background="@color/colorWhite"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/iv_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_camera_gray"
        android:scaleType="center"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"/>
    <com.foxridge.towerfox.views.CustomFontTextView
        android:id="@+id/tv_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:font_style="regular"
        android:textSize="16sp"
        android:textColor="@color/color_text_dark_gray"
        android:layout_centerVertical="true"
        android:text="progress"
        android:layout_toEndOf="@+id/iv_camera"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@+id/iv_sync"
        android:layout_marginEnd="16dp"/>

    <ImageView
        android:id="@+id/iv_sync"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/synchronize"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/iv_right_arrow"/>
    <ImageView
        android:id="@+id/iv_right_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_keyboard_arrow_right_24px"
        android:background="@drawable/circle_gray"
        android:scaleType="center"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDividerGray"
        android:layout_below="@+id/iv_right_arrow"
        android:layout_marginTop="12dp"/>
</RelativeLayout>